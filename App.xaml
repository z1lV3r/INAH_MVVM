<Application x:Class="INAH.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:INAH.ViewModels"
             StartupUri="Views/LoginView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <vm:LoginViewModel x:Key="loginVM"/>
            <vm:CollectionsViewModel x:Key="collectionsVM" User="User"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Dictionaries/Templates/WindowTemplate.xaml"/>
                <ResourceDictionary Source="/Resources/Dictionaries/Styles/WindowStyle.xaml"/>
                <ResourceDictionary Source="/Resources/Dictionaries/ViewModels.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
