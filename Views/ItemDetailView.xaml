<Window x:Class="INAH.Views.ItemDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:cc="clr-namespace:INAH.Component"
        mc:Ignorable="d"
        Title="{Binding Tittle, Mode=OneTime}"
        DataContext="{StaticResource ItemDetailVM}"
        Style="{StaticResource MyWindowStyle}" WindowStartupLocation="CenterScreen" Height="664" Width="942">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding ReturnToCollections}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="{Binding Subject, Mode=OneTime}" Style="{StaticResource WindowTittleStyle}"
               Grid.Row="0" HorizontalAlignment="Center" />
        <Grid Grid.Row="1" Margin="20,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <cc:ItemDetailData 
                        DetailTittle="Numero de inventario: " Value="{Binding StockNumber, Mode=OneWay}"
                        Visibility="{Binding StockNumber, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Numero de catalogo: " Value="{Binding CatalogNumber, Mode=OneWay}"
                        Visibility="{Binding CatalogNumber, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Numero de registro: " Value="{Binding RegistryNumber, Mode=OneWay}"
                        Visibility="{Binding RegistryNumber, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Otro numero: " Value="{Binding OtherNumber, Mode=OneWay}"
                        Visibility="{Binding OtherNumber, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Piezas amparadas: " Value="{Binding CoveredPieces, Mode=OneWay}"
                        Visibility="{Binding CoveredPieces, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Tipo de objeto: " Value="{Binding Type, Mode=OneWay}"
                        Visibility="{Binding Type, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Numero de inventario: " Value="{Binding StockNumber, Mode=OneWay}"
                        Visibility="{Binding StockNumber, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Autor: " Value="{Binding Author, Mode=OneWay}"
                        Visibility="{Binding Author, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Epoca: " Value="{Binding Period, Mode=OneWay}"
                        Visibility="{Binding Period, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Cultura: " Value="{Binding Culture, Mode=OneWay}"
                        Visibility="{Binding Culture, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Origen: " Value="{Binding Origin, Mode=OneWay}"
                        Visibility="{Binding Origin, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Forma: " Value="{Binding Shape, Mode=OneWay}"
                        Visibility="{Binding Shape, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Inscripciones: " Value="{Binding Inscriptions, Mode=OneWay}"
                        Visibility="{Binding Inscriptions, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Descripcion: " Value="{Binding Description, Mode=OneWay}"
                        Visibility="{Binding Description, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Observaciones: " Value="{Binding Remarks, Mode=OneWay}"
                        Visibility="{Binding Remarks, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Acervo: " Value="{Binding Collection, Mode=OneWay}"
                        Visibility="{Binding Collection, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Conservacion: " Value="{Binding ConservationType, Mode=OneWay}"
                        Visibility="{Binding ConservationType, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Avaluo: " Value="{Binding Valuation, Mode=OneWay}"
                        Visibility="{Binding Valuation, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Materia prima: " Value="{Binding RawMaterial, Mode=OneWay}"
                        Visibility="{Binding RawMaterial, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Tecnica de manufactura: " Value="{Binding ManufacturingTechnique, Mode=OneWay}"
                        Visibility="{Binding ManufacturingTechnique, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Tecnica decorativa: " Value="{Binding DecorativeTechnique, Mode=OneWay}"
                        Visibility="{Binding DecorativeTechnique, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Procedencia: " Value="{Binding Provenance, Mode=OneWay}"
                        Visibility="{Binding Provenance, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Metodo de adquisicion: " Value="{Binding AcquisitionMethod, Mode=OneWay}"
                        Visibility="{Binding AcquisitionMethod, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                    <cc:ItemDetailData 
                        DetailTittle="Ubicacion actual: " Value="{Binding Location, Mode=OneWay}"
                        Visibility="{Binding Location, Converter={StaticResource ItemDetailVisibilityCV}, Mode=OneWay}"/>
                </StackPanel>
            </ScrollViewer>
            <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image Height="350" Width="Auto" Grid.Row="0" Grid.Column="0" Source="{Binding ImageSource}"/>
                <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
                    <cc:ItemDetailMeasure
                        MeasureName="Alto: " MeasureValue="{Binding Height, Mode=OneWay}"
                        Visibility="{Binding Height, Converter={StaticResource ItemDetailMeasureVisibilityCV}}"/>
                    <cc:ItemDetailMeasure
                        MeasureName="Ancho: " MeasureValue="{Binding Width, Mode=OneWay}"
                        Visibility="{Binding Width, Converter={StaticResource ItemDetailMeasureVisibilityCV}}"/>
                    <cc:ItemDetailMeasure
                        MeasureName="Largo: " MeasureValue="{Binding Length, Mode=OneWay}"
                        Visibility="{Binding Length, Converter={StaticResource ItemDetailMeasureVisibilityCV}}"/>
                    <cc:ItemDetailMeasure
                        MeasureName="Diametro: " MeasureValue="{Binding Diameter, Mode=OneWay}"
                        Visibility="{Binding Diameter, Converter={StaticResource ItemDetailMeasureVisibilityCV}}"/>
                    <cc:ItemDetailMeasure
                        MeasureName="Peso: " MeasureValue="{Binding Weight, Mode=OneWay}"
                        Visibility="{Binding Weight, Converter={StaticResource ItemDetailMeasureVisibilityCV}}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
