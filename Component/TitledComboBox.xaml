<UserControl x:Class="INAH.Component.TitledComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:INAH.Component"
             Name="TitledComboBoxControl"
             mc:Ignorable="d" 
             d:DesignWidth="250">
    <StackPanel>
        <Label Content="{Binding Title, ElementName=TitledComboBoxControl}" Style="{StaticResource TitleStyle}"/>
        <ComboBox ItemsSource="{Binding ComboBoxItemsSource, ElementName=TitledComboBoxControl}" SelectedIndex="{Binding ComboBoxSelectedItem, ElementName=TitledComboBoxControl}" />
    </StackPanel>
</UserControl>
