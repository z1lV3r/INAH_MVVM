<UserControl x:Class="INAH.Component.ItemDetailData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:INAH.Component"
             Name="ItemDetail"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Visibility="{Binding Visibility, ElementName=ItemDetail}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding DetailTitle, ElementName=ItemDetail}" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Right"/>
        <Label Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Left">
            <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Value, ElementName=ItemDetail}"/>
        </Label>
    </Grid>
</UserControl>
