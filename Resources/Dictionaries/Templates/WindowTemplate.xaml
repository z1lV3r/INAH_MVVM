<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="WindowTemplate" TargetType="Window">
        <DockPanel Background="White">
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <Label x:Name="statusLabel" Content="Status" FontSize="11" Padding="0,0,3,0"/>
                        <Ellipse x:Name="statusIcon" Height="15" Stroke="Black" Width="15" StrokeThickness="0.5" Margin="0,0,5,0"/>
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
            <Label Content="TODOS LOS DERECHOS RESERVADOS © 2018" DockPanel.Dock="Bottom" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Height="Auto" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
            <ContentPresenter/>
            
        </DockPanel>
    </ControlTemplate>
</ResourceDictionary>